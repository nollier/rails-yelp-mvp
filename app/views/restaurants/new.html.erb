<div class="container">
  <h1>Your new restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "Validate", class: "btn btn-warning" %>
  <% end %>
  <%= link_to 'Back to menu', restaurants_path %>
</div>
